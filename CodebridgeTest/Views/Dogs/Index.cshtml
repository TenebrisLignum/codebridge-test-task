@model CodebridgeTest.ViewModels.DogTableViewModel
@using CodebridgeTest.Domain.Enums

@{
    Layout = "_Layout";
}

<h1>Dogs</h1>


<div class="mt-3">
    @using (Html.BeginForm("Index", "Dogs"))
    {
        <div class="row">
            <div class="col-3">
                <label class="control-label">Field Name</label>
                @Html.DropDownList("FieldName", @Html.GetEnumSelectList(typeof(DogFieldsName)), new {@class = "form-select"})
            </div>
            <div class="col-3">
                <label class="control-label">Sort Order</label>
                @Html.DropDownList("SortOrder", @Html.GetEnumSelectList(typeof(SortOrder)), new {@class = "form-select"})
            </div>
            <div class="col-3">
                <label class="control-label">Page Size</label>
                @Html.TextBox("PageSize","10", new { type="number", @class = "form-control", min=1 })
            </div>
            <div class="col-3">
                <label class="control-label">Page Number</label>
                @Html.TextBox("PageNumber","1", new { type="number", @class = "form-control", min=1 })
            </div>
        </div>

        <input class="btn btn-primary mt-2" type="submit" value="Filter" />
    }
</div>


<div class="mt-5">
    <p>Total count: @Model.TotalDogsCount</p>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Color</th>
                <th>Tail Length</th>
                <th>Weight</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.DogsList)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Color</td>
                    <td>@item.TailLength</td>
                    <td>@item.Weight</td>
                </tr>
            }
        </tbody>
    </table>
</div>